# EditorConfig helps maintain consistent coding styles across editors/IDEs
# https://editorconfig.org

# 최상위 설정 파일 지정
root = true

# 모든 파일에 적용되는 기본 설정
[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown 파일은 trailing whitespace 유지
[*.md]
trim_trailing_whitespace = false

# YAML/JSON 설정
[*.{yml,yaml,json}]
indent_size = 2

# 웹 프론트엔드 (JS/TS/HTML/CSS 등)
[*.{js,jsx,ts,tsx,html,css,scss}]
indent_size = 2

# Kotlin (Spring 등 백엔드)
[*.{kt,kts}]
indent_style = space
indent_size = 4
tab_width = 4

# Nix 표현식
[*.nix]
indent_style = space
indent_size = 2

# 쉘 스크립트
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile만 탭 사용
[Makefile]
indent_style = tab
