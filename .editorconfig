# EditorConfig for consistent code formatting
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Nix files
[*.nix]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Makefile
[Makefile]
indent_style = tab

# Python files
[*.py]
indent_style = space
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,tsx,jsx}]
indent_style = space
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2
