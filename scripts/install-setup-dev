#!/usr/bin/env bash

# Install bl command system with setup-dev
# This script sets up the bl command dispatcher and installs setup-dev

set -euo pipefail

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

print_status() {
  echo -e "${GREEN}[BL-INSTALL]${NC} $1"
}

print_warning() {
  echo -e "${YELLOW}[BL-INSTALL]${NC} $1"
}

print_error() {
  echo -e "${RED}[BL-INSTALL]${NC} $1"
}

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BL_SCRIPT="$SCRIPT_DIR/bl"

# Check if bl script exists
if [[ ! -f $BL_SCRIPT ]]; then
  print_error "bl script not found at: $BL_SCRIPT"
  exit 1
fi

print_status "Installing bl command system..."

# Install bl script
LOCAL_BIN="$HOME/.local/bin"
mkdir -p "$LOCAL_BIN"
cp "$BL_SCRIPT" "$LOCAL_BIN/bl"
chmod +x "$LOCAL_BIN/bl"
print_status "Installed bl dispatcher to: $LOCAL_BIN/bl"

# Run bl install to set up the command system
"$LOCAL_BIN/bl" install

# Check if ~/.local/bin is in PATH
if [[ ":$PATH:" != *":$LOCAL_BIN:"* ]]; then
  print_warning "$LOCAL_BIN is not in your PATH."
  print_warning "Add this to your shell profile (~/.bashrc, ~/.zshrc):"
  echo 'export PATH="$HOME/.local/bin:$PATH"'
  print_warning "After updating PATH, restart your shell."
else
  print_status "bl command system is ready!"
fi

print_status "Installation complete!"
print_status "Usage examples:"
echo "  bl list           # List available commands"
echo "  bl setup-dev      # Initialize Nix project"
echo "  bl setup-dev --help  # Get help for setup-dev"
