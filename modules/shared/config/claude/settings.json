{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash",
      "WebFetch(domain:*)",
      "WebSearch",
      "Write",
      "MultiEdit",
      "Edit",
      "NotebookRead",
      "NotebookEdit",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Task",
      "TodoWrite",
      "BashOutput",
      "KillBash",
      "ListMcpResourcesTool",
      "ReadMcpResourceTool",
      "mcp__context7__*",
      "mcp__sequential-thinking__*",
      "mcp__serena__*",
      "mcp__playwright__*",
      "mcp__magic__*",
      "Bash(git:*)",
      "Bash(gh:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-hooks git-commit-validator"
          },
          {
            "type": "command",
            "command": "claude-hooks gh-pr-validator"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-hooks message-cleaner"
          },
          {
            "type": "command",
            "command": "claude-hooks gh-pr-cleaner"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); output_style=$(echo \"$input\" | jq -r '.output_style.name'); session_id=$(echo \"$input\" | jq -r '.session_id'); version=$(echo \"$input\" | jq -r '.version'); branch=$(cd \"$cwd\" && git branch --show-current 2>/dev/null || echo ''); nix_shell=${IN_NIX_SHELL:+\"nix\"}; venv=${VIRTUAL_ENV:+\"$(basename \"$VIRTUAL_ENV\")\"}; printf \"[%s] %s%s%s%s %s %s\" \"$model\" \"${branch:+($branch) }\" \"${nix_shell:+[nix] }\" \"${venv:+[$venv] }\" \"$cwd\" \"${output_style:+($output_style)}\" \"$version\""
  },
  "alwaysThinkingEnabled": true,
  "rejectedMcpServers": [],
  "feedbackSurveyState": {
    "lastShownTime": 1755225425616
  }
}
