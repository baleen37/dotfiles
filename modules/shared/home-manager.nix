        # ÏÑ∏ÏÖò ÏïàÏ†ïÏÑ± Ìñ•ÏÉÅÏùÑ ÏúÑÌïú ÏÑ§Ï†ï
        set -g set-clipboard external
        set -g remain-on-exit off
        set -g allow-rename off
        set -g destroy-unattached off
        set -g status-interval 1

        # SSH/Î≥µÏÇ¨-Î∂ôÏó¨ÎÑ£Í∏∞ ÏµúÏ†ÅÌôî (tmux 3.5a)
        setw -g mode-keys vi
        bind-key -T copy-mode-vi v send-keys -X begin-selection
        # tmux ÎÇ¥Î∂Ä ÌÅ¥Î¶ΩÎ≥¥Îìú ÏÑ§Ï†ï (Î™®Îì† ÌôòÍ≤ΩÏóêÏÑú ÎèôÏûë)
        set -g set-clipboard off  # tmux bufferÎßå ÏÇ¨Ïö©
        # tmux bufferÎ°ú Î≥µÏÇ¨ (ÌôïÏã§ÌïòÍ≥† Í∞ÑÎã®Ìï®)
        bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel
        bind-key -T copy-mode-vi Enter send-keys -X copy-selection-and-cancel
        bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-selection-and-cancel
        # Ï∂îÍ∞Ä Îã®Ï∂ïÌÇ§
        bind-key P paste-buffer  # Prefix + PÎ°ú Î∂ôÏó¨ÎÑ£Í∏∞
        bind-key b list-buffers  # Prefix + bÎ°ú Î≤ÑÌçº Î™©Î°ù Î≥¥Í∏∞
        bind-key B choose-buffer # Prefix + BÎ°ú Î≤ÑÌçº ÏÑ†ÌÉù

