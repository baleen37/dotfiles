            magenta = "0xc594c5";
            cyan = "0x5fb3b3";
            white = "0xd8dee9";
          };
        };
      };
    };

    ssh = {
      enable = true;
      enableDefaultConfig = false;
      includes = [
        "${getUserInfo.homePath}/.ssh/config_external"
      ];
      matchBlocks = {
        "*" = {
          identitiesOnly = true;
